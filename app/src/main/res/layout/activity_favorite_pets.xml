<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_favorite_pets"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="joseduin.petagram.FavoritePets">

    <include android:id="@+id/miActionbarFav"
        layout="@layout/toolbar"></include>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewFav"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/miActionbarFav"
        android:scrollbars="vertical"/>

    <TextView
        android:id="@+id/favNotMacht"
        android:text="@string/fav5_not_match"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/miActionbarFav"/>

</RelativeLayout>
